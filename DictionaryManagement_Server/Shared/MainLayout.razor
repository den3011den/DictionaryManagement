<PageTitle>1 - Dictionary Management - @SD.AppVersion</PageTitle>

<div class="page">
    <div class="sidebar">
        @* <NavMenu /> *@
            <NavMenu ShowIconMenu="ToggleIconMenu" />
    </div>

    <main>
        <RadzenDialog />
        <RadzenNotification />
        <RadzenContextMenu />
        <RadzenTooltip />

         <div class="top-row px-4 auth">
            <LoginDisplay />
         </div>  
        <article class="content px-4">
            @Body
        </article>
        <article class="content px-4">
            @* <LoginDisplay />*@
        </article>
