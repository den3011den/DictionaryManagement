                    </RadzenDataGridColumn>

                    <RadzenDataGridColumn TItem="SapMovementsINDTO" Property="SapMaterialDTOFK.ToStringCodeName" Title="Материал в СИР" Width="50px" TextAlign="TextAlign.Center" Filterable="true" Sortable="true">
